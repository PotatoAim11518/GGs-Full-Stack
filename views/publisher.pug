extends layout

append head
    title= publisher.publisherName
    link(rel="stylesheet" href="/stylesheets/indivGenPub.css")
    script(src="/javascripts/index.js" type="module" defer)
block content
    body
        .gen-pub__container
            h1.indiv__gen-pub #{publisher.publisherName} Games
            div.genPub-thumbnail__container
                each game in games
                    div.indiv__gen-pub
                        a.indiv__gen-pub(href=`/games/${game.id}/reviews`)
                            img(src=`${game.imageSrc}` class="gameThumbnail")
