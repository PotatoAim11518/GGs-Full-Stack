extends layout

append head
    title All Publishers
    link(rel="stylesheet" href="/stylesheets/allGensPubs.css")
    script(src="/javascripts/index.js" type="module" defer)
block content
    body
        .publishers-container
            .header
                h1.all__gens-pubsHeader All Publishers
                .publishers-container__thumbnails
                    each publisher in publishers
                        div.all__gens-pubs
                            a.all__gens-pubs(href=`/publishers/${publisher.id}`) #{publisher.publisherName}
