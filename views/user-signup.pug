extends layout.pug
  
include utils.pug

append head
    link(rel="stylesheet" href="/stylesheets/signup.css")
    script(src="/javascripts/index.js" type="module" defer)

block content
  +errorReport(errors)
  .page-container
    img(src="https://images.unsplash.com/photo-1579407364450-481fe19dbfaa?ixid=MnwxMjA3fDB8MHxzZWFyY2h8MzZ8fHZpZGVvJTIwZ2FtZXxlbnwwfHwwfHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60" id="background-image")
  div.form-container
    form(action='/users/signup' method='post')
      input(type='hidden' name='_csrf' value=csrfToken)
      +field('User Name', 'username', user.username)
      +field('First Name', 'firstName', user.firstName)
      +field('Last Name', 'lastName', user.lastName)
      +field('Email Address', 'email', user.email)
      +field('Password', 'password', user.password, 'password')
      +field('Confirm Password', 'confirmPassword', user.confirmPassword, 'password')
      div
        button(type='submit' class='signup-button') Sign-Up!
        div.signup-form-link
          a(href='/users/login') Already a User? Login
          a(href='/') Cancel